  const [isLogin, setIsLogin] = useState(true);

  return (
    <div className="min-h-screen flex bg-gray-50">
      
      {/* BAGIAN KIRI: Formulir */}
      <div className="w-full lg:w-1/2 flex items-center justify-center p-8 lg:p-16">
